<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background= "@drawable/bg2"
    tools:context=".MainActivity" >
    

        <TextView
        android:id="@+id/esptitle" 
        android:text="@string/str_esp"
        android:layout_height="45dp"
        android:background="@drawable/tab"
        android:layout_width="fill_parent"   
        android:textSize="20sp" 
  	    android:textColor="#000000" 
        android:gravity="center"
      />   
    
    
            <TextView
        android:id="@+id/espkong"  
        android:layout_height="20dp" 
        android:layout_width="fill_parent"   
      />   
      
            
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        			android:layout_marginLeft ="15.0dip"
			android:layout_marginRight ="15.0dip"  
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvApSsid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tvApSsidTitle"
            android:textSize="24sp" />

                 <TextView 
        android:layout_height="match_parent" 
        android:layout_width="10dp"   
      />   
      
        <TextView
            android:id="@+id/tvApSssidConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:ems="10"
            android:singleLine="true" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        	    			android:layout_marginLeft ="15.0dip"
			android:layout_marginRight ="15.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvApPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tvPasswordTitle"
         
            android:textSize="24sp" />

                    <TextView 
        android:layout_height="match_parent" 
        android:layout_width="10dp"   
      />   
        <EditText
            android:id="@+id/edtApPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true"
            android:text=""
            style="@style/MMEditText" 
            tools:ignore="TextFields" >

        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        		    			android:layout_marginLeft ="15.0dip"
			android:layout_marginRight ="15.0dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
          
            android:textSize="24sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        
        <Switch
            android:id="@+id/switchIsSsidHidden"
            android:alpha="0.0"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:gravity="center_vertical"
        	    			android:layout_marginLeft ="15.0dip"
			android:layout_marginRight ="15.0dip"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
       
            android:textSize="24sp" />
        
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        
        <Spinner
            android:id="@+id/spinnerTaskResultCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:alpha="0.0"
            android:enabled="false"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        		    			android:layout_marginLeft ="15.0dip"
			android:layout_marginRight ="15.0dip" 
        android:orientation="vertical" >
 
      <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnConfirm" 
            android:background="@drawable/bt"
            android:text="@string/str_start" 
            android:layout_width ="fill_parent" 
			android:layout_height ="50dp" 
			android:gravity ="center"
			android:textSize ="24dp"  />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="8dp" 
            android:textSize="12sp" />    

    </LinearLayout>

</LinearLayout>